<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            xmlns:tools="http://schemas.android.com/tools"
            android:id="@+id/mobile_navigation"
            app:startDestination="@id/home_dest">

    <fragment android:id="@+id/home_dest"
              android:name="com.daya.navigation.sample.HomeFragment"
              android:label="fragment_home"
              tools:layout="@layout/fragment_home">

        <action android:id="@+id/next_action"
                app:destination="@id/flow_step_one_dest"
                app:enterAnim="@anim/slide_in_right"
                app:exitAnim="@anim/slide_out_left"
                app:popEnterAnim="@anim/slide_in_left"
                app:popExitAnim="@anim/slide_out_right"/>

    </fragment>

    <fragment android:id="@+id/flow_step_one_dest"
              android:name="com.daya.navigation.sample.FlowStepFragment"
              android:label="fragment_flow_step_one"
              tools:layout="@layout/fragment_flow_step_one">

        <argument android:name="flowStepNumber"
                  app:argType="integer"
                  android:defaultValue="1"/>

        <action android:id="@+id/next_action"
                app:destination="@id/flow_step_two_dest"/>

    </fragment>

    <fragment android:id="@+id/flow_step_two_dest"
              android:name="com.daya.navigation.sample.FlowStepFragment"
              android:label="fragment_flow_step_two"
              tools:layout="@layout/fragment_flow_step_two">

        <argument android:name="flowStepNumber"
                  app:argType="integer"
                  android:defaultValue="2"/>

        <action android:id="@+id/next_action"
                app:destination="@id/home_dest"/>

    </fragment>

</navigation>